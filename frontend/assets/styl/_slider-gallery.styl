.slider-gallery
  width: 100%
  height: 100%
  &__slide
    width: 100%
    height: 12rem
  &__img
    display: inline-table
    text-align: center
    vertical-align: middle
    width: 100%
    height: 100%
    background-color: rgba(0, 0, 0, 0)
    background-repeat: no-repeat
    background-size: cover
    background-position: center top
    opacity: 1
    z-index: 20
    visibility: inherit
    position: inherit
    transform: matrix(1, 0, 0, 1, 0, 0)
    &:hover
      & > .slider-gallery__container
        opacity: 1
        & > .slider-gallery__button
          opacity: 1
          transform: translate3d(0rem, 0rem, 0rem)
        & > .slider-gallery__box
          border-color: #fdc716
          background-color: rgba(1, 48, 94, 0.85)
          & > .fa-eye
            font-size: 5rem
            color: #eab814
            line-height: 11rem
  &__container
    display: table-cell
    vertical-align: middle
    opacity: 0
    transition: all 0.4s ease 0s
  &__box
    border: .5rem solid transparent
    height: 100%
    transition: all 0.4s ease 0s
    width: 100%
    position: absolute
    top: 0
    left: 0
  &__button
    margin-right: 0
    padding: .95rem 2.4rem
    transform: translate3d(0rem, -7.5rem, 0rem)
    transition: all 0.4s ease 0s !important
    opacity: 0