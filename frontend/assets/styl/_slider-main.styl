.slider-main
  width: 100%
  height: 100%
  &__img
    width: 100%
    height: 45rem
    background-color: rgba(0, 0, 0, 0)
    background-repeat: no-repeat
    background-size: cover
    background-position: center top
    opacity: 1
    z-index: 20
    visibility: inherit
    position: inherit
    transform: matrix(1, 0, 0, 1, 0, 0)
  &__container
    max-width: 33rem
    position: absolute
    top: 8rem
    left: 10rem
  &__title
    color: #fff
    font-size: 5.2rem
    font-weight: 400
    line-height: 6rem
    text-shadow: .2rem .2rem .2rem rgba(0, 0, 0, .2)
    margin: 1.4rem 0 .9rem
  &__desc
    color: #ffff
    font-size: 2rem
    line-height: 3rem
    font-weight: 300
    margin: 0 0 3rem